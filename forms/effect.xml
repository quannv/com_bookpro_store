<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<fieldset>
			<field name="id" type="text" default="0"
				label="JGLOBAL_FIELD_ID" readonly="true" class="readonly"
				description="JGLOBAL_FIELD_ID_DESC" />
	
			<field name="title" type="text" label="COM_BOOKPRO_TITLE"	 required="true" />

			<field
					name="image"
					type="media"
					schemes="http,https,ftp,ftps,data,file"
					validate="url"
					relative="true"
					label="COM_BOOKPRO_FIELD_IMAGE_LABEL"
			/>
			
			<field name="description" type="editor" label="COM_BOOKPRO_DESCRIPTION"
				description="COM_BOOKPRO_DESCRIPTION" />

			<field name="state" type="radio" label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
				class="btn-group" size="1" default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>

			</field>

			

		</fieldset>
	</fieldset>
</form>
