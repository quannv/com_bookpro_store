<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joombooking\Component\Bookpro\Administrator\Field">
<fieldset>	
	<fields>

		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
		
		<field name="image" type="media" directory="com_bookpro"
   			hide_none="1" label="COM_BOOKPRO_IMAGE" size="40"
   				description="COM_BOOKPRO_IMAGE" />														
		<field
			id="title"
			name="title"
			type="text"
			required="true"
			label="COM_BOOKPRO_TITLE"
			description="COM_BOOKPRO_TITLE"
			class="inputbox"
			size="40"/>	

		<field
			id="subtitle"
			name="subtitle"
			type="text"
			required="false"
			label="COM_BOOKPRO_SUBTITLE"
			description="COM_BOOKPRO_SUBTITLE"
			class="inputbox"
			size="40"/>						
								
		<field
			id="alias"
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45" />												
						
		<field
			id="code"
			name="code"
			type="text"
			required="false"
			label="COM_BOOKPRO_CODE"
			description="COM_BOOKPRO_CODE"
			class="inputbox"
			size="40"/>	
		<field
			id="location"
			name="location"
			type="location"
			autocomplete="false"
			zoom="17"
			latitude="10"
			longitude="30"
			width="300"
			height="300"
			required="false"
			label="COM_BOOKPRO_AIRPORT_LOCATION"
			description="COM_BOOKPRO_AIRPORT_LOCATION"
			class="inputbox"
			/>
		
		<field
			name="longitude"
			type="hidden"
			default="0"
			required="false"
			readonly="true"/>	
		
		<field
			name="latitude"
			type="hidden"
			default="0"
			required="false"
			readonly="true"/>		
						
							
													
		<field
			id="country_id"
			name="country_id"
			type="country"
			required="false"
			label="COM_BOOKPRO_COUNTRY"
			description="COM_BOOKPRO_COUNTRY"
			/>					
								
														
		<field
			id="state"
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
			
		</field>					
		<field name="desc" type="editor" buttons="true"
	   hide="pagebreak,readmore" class="inputbox" filter="JComponentHelper::filterText"
	   label="JGLOBAL_DESCRIPTION" description="COM_BOOKPRO_ITEMS_DESCRIPTION_DESC" />					
		<field name="intro" type="editor" buttons="true"
	   hide="pagebreak,readmore" class="inputbox" filter="JComponentHelper::filterText"
	   label="JGLOBAL_DESCRIPTION" description="COM_BOOKPRO_ITEMS_DESCRIPTION_DESC" />														
		
		 			
								
	</fields>	
</fieldset>		
</form>	