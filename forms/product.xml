<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joombooking\Component\Bookpro\Administrator\Field">
	<fieldset >
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		
		<field name="sku"	type="text"
			
			label="COM_BOOKPRO_SKU"
			
			class="inputbox"
			size="30"
			required="true"
		/>
		
		<field name="title"	type="text"
			label="COM_BOOKPRO_TITLE"
			description="COM_BOOKPRO_TITLE"
			class="inputbox"
			required="true"
		/>

		<field name="price"	type="text"
			label="COM_BOOKPRO_PRICE"
			description="COM_BOOKPRO_PRICE"
			class="inputbox"
		/>
		
		
		<field name="from" type="areas"
			class="input"
			
			label="COM_BOOKPRO_BUSTRIP_FROM"
			required="true"
			
		/>
		
		
		<field name="to" type="brands"
			class="input"
		
			label="COM_BOOKPRO_BUSTRIP_TO"
			required="true"
			
			
		/>
		
		<field name="vehicle_id" type="effects"
			class="inputbox"
			
			label="COM_BOOKPRO_VEHICLE"
			required="true"
			
			
			
		/>


		
		<field name="operator_id" type="thickness"
			class="inputbox"
			
			label="COM_BOOKPRO_AGENT"
			required="true"
			
		/>
		
		<field name="start_time"	type="timepicker"
			
			label="COM_BOOKPRO_BUSTRIP_START_TIME"
			
			class="inputbox input-small"
			
			required="true"
		/>
		
		
		<field name="start_loc"	type="text"
			
			label="COM_BOOKPRO_BUSTRIP_START_LOC"
			description="COM_BOOKPRO_BUSTRIP_START_LOC"
			class="inputbox"
			size="30"
			
		/>
		
		<field name="end_loc"	type="text"
			
			label="COM_BOOKPRO_BUSTRIP_END_LOC"
			description="COM_BOOKPRO_BUSTRIP_END_LOC"
			class="inputbox"
			size="30"
			
		/>
		
		<field name="duration"	type="text"
			
			label="COM_BOOKPRO_BUSTRIP_DURATION"
			description="COM_BOOKPRO_BUSTRIP_DURATION_DESCRIPTION"
			class="inputbox input-small"
			size="30"
			required="true"
		/>

		<field name="image"
			type="media"
			hide_none="1"
			label="COM_BOOKPRO_IMAGE"
			description="COM_BOOKPRO_IMAGE"
			/>
		
		<field name="policy" type="editor" buttons="true"
	   hide="pagebreak,readmore" class="inputbox" filter="JComponentHelper::filterText"
	   label="COM_BOOKPRO_POLICIES" description="COM_BOOKPRO_POLICIES" />
		<field name="state" type="radio" label="JSTATUS"
		 class="inputbox btn-group small"
			size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>

</form>