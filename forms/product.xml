<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joombooking\Component\Bookpro\Administrator\Field">
	<fieldset >
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		
		<field name="sku" type="text"
			
			label="COM_BOOKPRO_SKU"
			
			class="inputbox"
			size="30"
			required="true"
		/>
		
		<field name="title"	type="text"
			label="COM_BOOKPRO_TITLE"
			description="COM_BOOKPRO_TITLE"
			class="inputbox"
			required="true"
		/>

		<field name="price"	type="text"
			label="COM_BOOKPRO_PRICE"
			description="COM_BOOKPRO_PRICE"
			class="inputbox"
		/>
		
		
		<field name="areas_id" type="area"
			class="input"
			label="Area of use"
			multiple="true"
			required="true"
		/>
		
		
		<field name="brand_id" type="brand"
			class="input"
			label="Brand"
			required="true"
		/>
		
		<field name="design_id" type="design"
			class="inputbox"
			label="Design"
			required="true"		
		/>

		
		<field name="thickness_id" type="thickness"
			class="inputbox"
			
			label="Thickness"
			required="true"
			
		/>

		<field name="color_id" type="color"
			class="inputbox"
			label="Color"
			required="true"
			
		/>

		
		<field name="effects_id" type="effect"
			class="inputbox"
			multiple="true"
			label="Effect"
			required="true"
			
		/>

		<field name="type_id" type="type"
			class="inputbox"
			label="Type"
			required="true"
		/>

		<field name="surface_id" type="surface"
			class="inputbox"
			label="Surface"
			required="true"
		/>

		<field name="size_id" type="surface"
			class="inputbox"
			label="Size"
			required="true"
		/>

		<field name="facetile_id" type="facetile"
			class="inputbox"
			label="Facetile"
			required="true"
		/>

		<field name="groutcolor_id" type="groutcolor"
			class="inputbox"
			label="Grout Color"
			required="true"
		/>

		<field name="contrast_id" type="contrast"
			class="inputbox"
			label="Contrast"
			required="true"
		/>

		<field name="description"	type="editor"
			label="COM_BOOKPRO_DESCRIPTION"
			description="COM_BOOKPRO_DESCRIPTION"
			class="inputbox"
			required="true"
		/>
		
	

		<field name="image"
			type="media"
			hide_none="1"
			label="COM_BOOKPRO_IMAGE"
			description="COM_BOOKPRO_IMAGE"
			/>

		<field name="images"
		type="media"
		
		multiple="true"
		label="COM_BOOKPRO_IMAGE"
		description="COM_BOOKPRO_IMAGE"
		required="false"
		/>
		
		<field name="policy" type="editor" buttons="true"
	   hide="pagebreak,readmore" class="inputbox" filter="JComponentHelper::filterText"
	   label="COM_BOOKPRO_POLICIES" description="COM_BOOKPRO_POLICIES" />
		<field name="state" type="radio" label="JSTATUS"
		 class="inputbox btn-group small"
			size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>

</form>