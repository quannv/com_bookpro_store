<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joombooking\Component\Bookpro\Administrator\Field">
	<fieldset >
		<field name="id" type="hidden" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		
		<field name="sku" type="text"
			
			label="COM_BOOKPRO_SKU"
			
			class="inputbox"
			size="30"
			required="true"
		/>
		
		<field name="title"	type="text"
			label="COM_BOOKPRO_TITLE"
			description="COM_BOOKPRO_TITLE"
			class="inputbox"
			required="true"
		/>

		<field name="price"	type="text"
			label="COM_BOOKPRO_PRICE"
			description="COM_BOOKPRO_PRICE"
			class="inputbox"
		/>
		
		
		<field name="area_id" type="area"
			class="input"
			label="Area of use"
			multiple="true"
			required="true"
		/>
		
		
		<field name="brand_id" type="brand"
			class="input"
			label="Brand"
			required="true"
		/>
		
		<field name="design_id" type="design"
			class="inputbox"
			label="Design"
			required="true"		
		/>

		
		<field name="thickness_id" type="thickness"
			class="inputbox"
			
			label="Thickness"
			required="true"
			
		/>
		<field name="effect_id" type="effect"
			class="inputbox"
			
			label="Effect"
			required="true"
			
		/>
		
	

		<field name="image"
			type="media"
			hide_none="1"
			label="COM_BOOKPRO_IMAGE"
			description="COM_BOOKPRO_IMAGE"
			/>
		
		<field name="policy" type="editor" buttons="true"
	   hide="pagebreak,readmore" class="inputbox" filter="JComponentHelper::filterText"
	   label="COM_BOOKPRO_POLICIES" description="COM_BOOKPRO_POLICIES" />
		<field name="state" type="radio" label="JSTATUS"
		 class="inputbox btn-group small"
			size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>

</form>